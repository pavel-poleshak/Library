@model IEnumerable<Library.Models.Book>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Все книги</h2>

<p>
    @*@Html.ActionLink("Create New", "Create")*@
</p>
<div class="row">
    <div class="col-md-3">
        @Html.ActionLink("Добавить книгу", "Create", "Books", null, new { @class = "btn btn-primary" })
    </div>
  
</div>
<hr />
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Authors)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Authors)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.ActionLink("Изменить", "Edit", new { id=item.Id }, new { @class = "btn - btn-primary" }) |
            @Html.ActionLink("Детали", "Details", new { id=item.Id }, new { @class = "btn btn-info" }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.Id }, new {@class="btn btn-danger" })
        </td>
    </tr>
}

</table>
